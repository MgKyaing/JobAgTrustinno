<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trustinno.win.jobagtrustinno.Employer.Employer_company_profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/employer_jobupload_firstlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/darkgreen"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_align_vertically"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/employer_companyprofile"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/employer_companyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_align_vertically"
                android:layout_marginRight="@dimen/text_align_vertically"
                android:hint="@string/companyname_employer"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/employer_jobtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_align_vertically"
                android:layout_marginRight="@dimen/text_align_vertically"
                android:hint="@string/address"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/employer_company_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_align_horizonally"
                android:layout_marginLeft="@dimen/text_align_vertically"
                android:layout_marginRight="@dimen/text_align_vertically"
                android:hint="@string/prompt_phonenumber"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/employer_company_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_align_horizonally"
                android:layout_marginLeft="@dimen/text_align_vertically"
                android:layout_marginRight="@dimen/text_align_vertically"
                android:hint="@string/employer_website"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/employer_postalcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_align_vertically"
                android:layout_marginRight="@dimen/text_align_vertically"
                android:hint="@string/employer_postalcode"
                android:textColor="@color/white" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_align_vertically"
                android:entries="@array/employer_country"
                android:textColor="@color/white" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_align_vertically"
                android:entries="@array/employer_city"
                android:textColor="@color/white" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_align_vertically"
                android:entries="@array/employer_township"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employer_jobupload_firstlinear"
            android:layout_margin="10dp"
            android:elevation="10dp"

            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@color/auth_background"
                android:elevation="10dp"
                android:text="@string/up_text"
                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
